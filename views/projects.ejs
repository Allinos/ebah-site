    <link rel="stylesheet" href="css/main.css">
    <link rel="stylesheet" href="css/theme-dark.css">
    <title>Projects List</title>
</head>
<style>
    section h1 {
        width: 85%;
        margin: auto;
        margin-top: 20px;
        margin-bottom: 5px;
        color: #fff62b;
    }

    .containerTwo {
        display: grid;
        grid-gap: 2rem;
        grid-template-columns: repeat(3, 1fr);
        /* grid-template-rows: repeat(12, 150px); */
        margin: 0 auto;
        max-width: 90%;
        padding: 3rem 20px;
        border-radius: 13px;
    }

    .img {
        border-radius: 1rem;
        height: 100%;
        width: 100%;
        object-fit: cover;
    }

    .item-4 {
        grid-row: 2/5;
    }

    .item-5 {
        grid-row: 2/6;
    }

    .item-6 {
        grid-row: 2/4;
    }

    .item-7 {
        grid-row: 5/6;
    }

    .item-8 {
        grid-row: 4/6;
    }

    .item-9 {
        grid-row: 6/11;
    }

    .item-10 {
        grid-row: 6/7;
    }

    .item-11 {
        grid-row: 6/9;
    }

    .item-12 {
        grid-row: 7/12;
    }

    .item-13 {
        grid-row: 9/13;
    }

    .item-14 {
        grid-row: 11/13;
    }
</style>

<body class="webpage">
    <%- include('./partials/header.ejs') %>


        <br><br>
        <section class="webpage__type-service type-service">
            <div class="container">
                <h2 class="type-service__heading heading">Our Projects</h2>
                <h4 class="type-service__heading heading2">Best solutions for your dream</h4>
            </div>
            <div class="container">
                <a onclick="document.getElementById('interior').scrollIntoView()">
                    <h2 class="heading2 btn">Interior Projects</h2>
                </a>
                <a onclick="document.getElementById('exterior').scrollIntoView()">
                    <h2 class="heading2 btn">Exterior Projects</h2>
                </a>
                <a onclick="document.getElementById('art').scrollIntoView()">
                    <h2 class="heading2 btn">Art & Craft Projects</h2>
                </a>
            </div>

            <h1 id="interior">Interior Projects</h1>
            <main class="containerTwo">
                <% let a=1 %>
                <% files[0][0].forEach(e=>{ %>
                    <div class="item-<%= a %>">
                        <img class="img" src="img/u/projects/interior/<%= e %>" alt="">
                    </div>
                     <% a=a+1 %>
               <% }) %>
            </main>
            <br>

            <h1 id="exterior">Exterior Projects</h1>
            <main class="containerTwo">
                <% let b=1 %>
                <% files[0][1].forEach(e=>{ %>
                    <div class="item-<%= b %>">
                        <img class="img" src="img/u/projects/exterior/<%= e %>" alt="">
                    </div>
                     <% b=b+1 %>
               <% }) %>
            </main><br>


            <h1 id="art">Art & Craft Projects</h1>
            <main class="containerTwo">
                <% let c=1 %>
                <% files[0][2].forEach(e=>{ %>
                    <div class="item-<%= c %>">
                        <img class="img" src="img/u/projects/art/<%= e %>" alt="">
                    </div>
                     <% c=c+1 %>
               <% }) %>
            </main>
            
        </section>
        <%- include('./partials/footer.ejs') %>
